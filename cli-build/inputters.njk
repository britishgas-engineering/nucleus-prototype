{% endmacro %}


{% macro datePicker(name, label, validation, options, mask=null, separator=null) %}
<ns-datepicker name="{{ name }}" year="2020" month="3" label="{{ label }}"></ns-datepicker>
{% endmacro %}

{% macro address(name, label, validation, options, mask=null, separator=null) %}
<nsx-address-selector name="address" required="true"></nsx-address-selector>
{% endmacro %}


{% macro selector(name, label, validation, options, mask=null, separator=null) %}
