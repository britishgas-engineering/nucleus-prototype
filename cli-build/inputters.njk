{% macro attributes(mask, separator, helper) %}
{% if mask == 'undefined'  %}
  mask=""
{% else %}
  mask="{{mask}}"
{% endif %}
{% if separator == 'undefined'  %}
  separator=""
{% else %}
  separator="{{separator}}"
{% endif %}
{% if helper == 'undefined'  %}
  helper=""
{% else %}
  helper="{{helper}}"
{% endif %}
{% endmacro %}


{% macro text(name, label, validation, options, mask, separator, helper, tipDetails) %}
<ns-inputter validation="{{ validation }}" name="{{ name }}" {{ attributes(mask, separator, helper) }} >
    {% if tipDetails %} <div slot="tip-details">{{ tipDetails }}</div>{% endif %}
    <label slot="label" for="surname">{{ label }}</label>
    <input id="surname" autocomplete="family-name" type="text" aria-invalid="false">
</ns-inputter>
{% endmacro %}

{% macro date(name, label, validation, options, mask=null, separator=null) %}
<ns-inputter name="{{ name }}" validation="[&quot;isRequired&quot;,&quot;isDateOfBirth&quot;]" >
    <label slot="label" for="date">{{ label }}</label>
    <input id="date" autocomplete="family-name" type="date" aria-invalid="false">
</ns-inputter>
{% endmacro %}

{% macro checkbox(name, label, validation, options) %}
<ns-inputter validation="[&quot;isRequired&quot;]" heading="{{ label }}" name="{{ name }}">
    {% for option in options %}
      <input type="checkbox" id="checkbox-question-{{ option }}" name="radio-question" value="{{ option }}">
      <label for="checkbox-question-{{ option }}">{{ option }}</label>
    {% endfor %}
</ns-inputter>
{% endmacro %}

{% macro radio(name, label, validation, options) %}
<ns-inputter validation="[&quot;isRequired&quot;]" heading="{{ label }}" name="{{ name }}">
    {% for option in options %}
      <input type="radio" id="radio-{{ name }}-{{ option }}" name="radio-{{ name }}" value="{{ option }}">
      <label for="radio-{{ name }}-{{ option }}">{{ option }}</label>
    {% endfor %}
</ns-inputter>
{% endmacro %}

{% macro select(name, label, validation, options) %}
<ns-inputter validation="{{ validation }}" name="{{ name }}">
    <label slot="label">{{ label }}</label>
    <select autocomplete="honorific-prefix" name="select">
        <option value="">Please Select</option>
        {% for option in options %}
        <div class="module">
           <option value="{{ option }}">{{ option }}</option>
        </div>
        {% endfor %}
    </select>
</ns-inputter>
{% endmacro %}

