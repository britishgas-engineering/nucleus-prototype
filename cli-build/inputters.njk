{% macro highlighter(icon, heading, message) %}
<ns-highlighter type="{{ icon }}" role="alert">
    <h2 slot="heading" role="heading" aria-level="2">
    {{ heading }}
    </h2>
    {{ message }}
</ns-highlighter>
{% endmacro %}