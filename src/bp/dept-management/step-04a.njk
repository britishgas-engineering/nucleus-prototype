---
title: Triage - step-04a
---

{% include "./_includes/ns-landmark.njk" -%}

<ns-panel>
  {% include "./_includes/go-back.njk" -%}
  <ns-form class="splash" nf-model="model.financial-difficulty">
    <ns-inputter name="question-a" validation="[&quot;isRequired&quot;]" value="">
      <input type="radio" name="radio" id="radio-a" value="Change">
      <label for="radio-a">There has been a recent change in my household income (salary or benefits)</label>
      <input type="radio" name="radio" id="radio-b" value="Difficult">
      <label for="radio-b">I'm having difficulty keeping up with priority bills (e.g rent, mortgage, utilities, council tax, food)</label>
      <input type="radio" name="radio" id="radio-c" value="Missed">
      <label for="radio-c">I've already missed payments on priority bills (e.g rent, mortgage, utilities, council tax, food)</label>
      <input type="radio" name="radio" id="radio-d" value="Other">
      <label for="radio-d">Other</label>
    </ns-inputter>
    <ns-cta nf-href="DYNAMIC">Continue</ns-cta>
  </ns-form>
</ns-panel>

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="question-a"]').value;

    if (data === 'Change') {
      return '../step-05';
    }

    if (data === 'Difficult') {
      return '../step-05';
    }

    if (data === 'Missed') {
      return '../step-05';
    }

    if (data === 'Other') {
      return '../step-04c';
    }

  }
</script>
