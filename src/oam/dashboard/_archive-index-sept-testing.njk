<ns-panel decoration="invert-ramp-blue" class="">
  <div class="splash">
    <h5>Hi <span nf-model="model.oam-02.first-name">Mr</span> <span nf-model="model.oam-02.surname">Known</span>.</h5>
    <h1>{{title}}</h1>
  </div>
  <div class="splash triple">

    <div class="np-card notification type-a">
      <div class="icon-holder">
        <ns-icon type="boiler" aria-hidden="true"></ns-icon>
      </div>
      <div class="content">
        <div class="heading-holder">
          <h3 class="heading">Annual service</h3>
        </div>
        <div class="paragraph-holder">
          <p class="paragraph">It's time to book your annual service visit</p>
        </div>
        <div class="cta-holder">
          <ns-cta class="cta" type="text">Book now</ns-cta>
        </div>
      </div>
    </div>

    <div class="np-card notification type-b">
      <div class="icon-holder">
        <ns-icon type="bill" aria-hidden="true"></ns-icon>
      </div>
      <div class="content">
        <div class="heading-holder">
          <h3 class="heading">Your bill</h3>
        </div>
        <div class="paragraph-holder">
          <p class="paragraph">Your energy bill of £120.41 is ready</p>
        </div>
        <div class="cta-holder">
          <ns-cta class="cta" type="text">Pay now</ns-cta>
        </div>
      </div>
    </div>

    <div class="np-card notification type-c">
      <div class="img-holder">
        <ns-image slot="image" ratio="4x3" src="https://user-images.githubusercontent.com/47324496/73546218-c0b07780-4434-11ea-8063-dd45d2dbbbad.jpg"></ns-image>
      </div>
      <div class="content">
        <div class="heading-holder">
          <h3 class="heading">Add plumbing & drains</h3>
        </div>
        <div class="paragraph-holder">
          <p class="paragraph">For just £4 per month</p>
        </div>
        <div class="cta-holder">
          <ns-cta class="cta" type="text">Upgrade cover</ns-cta>
        </div>
      </div>
    </div>

  </div>
</ns-panel>

