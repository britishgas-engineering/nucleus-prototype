---
title: Log in to your account
---

<ns-landmark type="lakeside">
  <h1 slot="heading">
    <span class="h5">My account.</span>
    <span class="h1">{{title}}</span>
  </h1>
  <p slot="paragraph">Stay in control with easy access to your British Gas account.</p>
</ns-landmark>

<ns-panel>
  <ns-form class="splash" nf-model="model.oam">
    <ns-inputter validation="[&quot;isRequired&quot;]" name="email-address" value="">
      <label slot="label">Email address</label>
      <input type="email">
    </ns-inputter>
    <ns-cta nf-href="DYNAMIC">Continue</ns-cta>
  </ns-form>
</ns-panel>

{% include "./_includes/ns-accordion-login.njk" -%}

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="email-address"]').value;
    if (data === 'known@address.com') {
      return '../login-02';
    } 
    else {
      return '../reg-02b-login-fail';
    }
  }
</script>
