    <ns-cta type="text" href="" icon="arrow-right" onclick="action()" loading="false" loadingmessage="Loading...">Get a quote for energy</ns-cta>
    <br><br>
    <ns-cta type="text" href="" icon="arrow-right" onclick="action()" loading="false" loadingmessage="Loading...">Get a quote for HomeCare</ns-cta>
