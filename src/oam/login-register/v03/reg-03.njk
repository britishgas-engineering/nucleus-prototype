<ns-landmark type="lakeside">
  <h1 slot="heading">
    <span class="h5">Registration step 1 of 3.</span>
    <span class="h1">Verify your account</span>
  </h1>
  <p slot="paragraph">As a final security check, please confirm your reference number. You’ll find this on some of our emails, and any bills or headed letters we’ve sent you. If you’re not sure where to find it, simply click below for more help.</p>

</ns-landmark>

<ns-panel>
  <ns-form class="splash" nf-model="model.oam-03">
    <ns-inputter mask="              " separator="" validation="[&quot;isRequired&quot;,&quot;minLength(11)&quot;,&quot;maxLength(14)&quot;]" name="reference-number" value="">
      <label slot="label">Reference number</label>
      <input type="text">
    </ns-inputter>
    <ns-cta nf-href="DYNAMIC">Next step</ns-cta>
  </ns-form>
</ns-panel>

{% include "./_includes/ns-accordion-reference-number.njk" -%}

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="reference-number"]').value;
    if (data === '85123456789') {
      return '../reg-04';
    }
    else {
      return '../reg-04c-last-resort';
    }
  }
</script>
