<ns-inputter class="splash triple" validation="['isRequired']" heading="How often would you like your smart meters to take readings?" value="">

  <ns-selector decoration="dualFuel">
    <input type="radio" id="joint-half-hourly" name="joint-question" value="joint-half-hourly">
    <label for="joint-half-hourly">Half-hourly</label>
    <div slot="description">
      <ul class="ul-ticked">
        <li>Accurate bills</li>
        <li>Hourly and daily breakdown of your usage</li>
        <li>Heating, lighting and hot water spend predictions</li>
        <li>Compare usage against other homes in your area</li>
        <li>Personalised energy saving tips</li>
      </ul>
    </div>
  </ns-selector>

  <ns-selector decoration="dualFuel">
    <input type="radio" id="joint-daily" name="joint-question" value="joint-daily">
    <label for="joint-daily">Daily</label>
    <div slot="description">
      <ul class="ul-ticked">
        <li>Accurate bills</li>
        <li>All of the benefits of half-hourly without an hourly breakdown of usage</li>
      </ul>
    </div>
  </ns-selector>

  <ns-selector decoration="dualFuel">
    <input type="radio" id="joint-monthly" name="joint-question" value="joint-monthly">
    <label for="joint-monthly">Monthly</label>
    <div slot="description">
      <ul class="ul-ticked">
        <li>Accurate bills</li>
      </ul>
    </div>
  </ns-selector>

</ns-inputter>
