---
title: Smart meter settings - gas meter
metertype: smart gas meter
---

{% include "./_includes/ns-landmark.njk" -%}

<ns-panel>
  <ns-form class="splash" nf-model="model.smart-meter-settings">

    <h2>Gas meter</h2>

    <ns-highlighter type="success">
      <h2 slot="heading">Your smart frequency has been saved.</h2>
      <p>Your {{metertype}} have been set to take readings <span nf-model="model.smart-meter-settings.gas-selector">[gas]</span>.</p>
    </ns-highlighter>
    
    {% include "./_includes/ns-selector-gas.njk" -%}

    <ns-cta nf-href="DYNAMIC">Save smart frequency</ns-cta>
  </ns-form>
</ns-panel>

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="gas-selector"]').value;

    if (data = 'gas') {
      return '../single-gas-success';
    }

  }
</script>
