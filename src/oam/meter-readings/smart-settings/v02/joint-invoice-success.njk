<ns-panel>
  <ns-form class="splash" nf-model="model.smart-meter-settings">

    <h2>Gas and electricity meters</h2>

    <ns-highlighter type="success">
      <h2 slot="heading">Your smart frequency has been saved.</h2>
      <p>Your {{metertype}} have been set to take readings <span nf-model="model.smart-meter-settings.joint-selector">[joint]</span>.</p>
    </ns-highlighter>
    
    {% include "./_includes/ns-selector-joint.njk" -%}

    <ns-cta nf-href="DYNAMIC">Save smart frequency</ns-cta>
  </ns-form>
</ns-panel>

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="joint-selector"]').value;

    if (data = 'gas') {
      return '../joint-invoice-success';
    }

  }
</script>
