---
title: Triage
heading: "<b>I can't pay</b> today because"
---

{% include "./_includes/ns-landmark.njk" -%}

<ns-panel>
  <ns-form class="splash" nf-model="model.pay-reason">
    <ns-inputter name="question-a" validation="[&quot;isRequired&quot;]" value="">
      <input type="radio" name="radio" id="radio-a" value="financial difficulty">
      <label for="radio-a">Me or a member of my household is experiencing financial difficulty</label>
      <input type="radio" name="radio" id="radio-b" value="health issues">
      <label for="radio-b">Me or a member of my household have a health issue that affects the household income</label>
    </ns-inputter>
    <ns-cta nf-href="DYNAMIC">Continue</ns-cta>
  </ns-form>
</ns-panel>

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="question-a"]').value;

    if (data === 'financial difficulty') {
      return '../step-04a';
    }

    if (data === 'health issues') {
      return '../step-04b';
    }

  }
</script>
