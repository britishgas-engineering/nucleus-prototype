---
title: Triage
heading: "How frequently would you like to <b>pay</b>"
---

{% include "./_includes/ns-landmark.njk" -%}

<ns-panel>
  {% include "./_includes/go-back.njk" -%}
  <ns-form class="splash" nf-model="model.pay-frequency">
    <ns-inputter name="question-a" validation="[&quot;isRequired&quot;]" value="">
      <input type="radio" name="radio" id="radio-a" value="Weekly">
      <label for="radio-a">Weekly</label>
      <input type="radio" name="radio" id="radio-b" value="Fortnightly">
      <label for="radio-b">Fortnightly</label>
      <input type="radio" name="radio" id="radio-c" value="Monthly">
      <label for="radio-c">Monthly</label>
    </ns-inputter>
    <ns-cta nf-href="DYNAMIC">Continue</ns-cta>
  </ns-form>
</ns-panel>

<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="question-a"]').value;

    if (data === 'Weekly') {
      return '../step-07a';
    }

    if (data === 'Fortnightly') {
      return '../step-07a';
    }

    if (data === 'Monthly') {
      return '../step-07a';
    }

  }
</script>
