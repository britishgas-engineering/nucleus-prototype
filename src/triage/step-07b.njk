<script>
  function getDynamicURL() {
    var data = document.querySelector('ns-inputter[name="question-a"]').value;

    if (data === 'Text') {
      return '../step-08';
    }

    if (data === 'Phone') {
      return '../step-08';
    }

    if (data === 'Call') {
      return '../step-08';
    }

  }
</script>
