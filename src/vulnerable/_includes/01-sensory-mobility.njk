<ns-inputter validation="[]" heading="Sensory" name="sensory">
  <input type="checkbox" id="blind" value="blind">
  <label for="blind">Blind</label>
  <input type="checkbox" id="electricity" value="electricity">
  <label for="electricity">Sight loss or partially sighted</label>
  <input type="checkbox" id="deaf" value="deaf" class="np-toggler">
  <label for="deaf">Deaf</label>
  <ns-highlighter type="info" class="np-toggled">
    <h2 slot="heading">SignVideo</h2>
    <p>SignVideo provides our deaf customers access to an online interpreter enabling  you to communicate with us using sign language.</p>
    <p>You can <a href="#!">start a SignVideo</a> or if you prefer, <a href="#!">chat with one of our agents</a>.</p>
  </ns-highlighter>
  <input type="checkbox" id="hearing" value="hearing">
  <label for="hearing">Hearing impaired</label>
  <input type="checkbox" id="loss" value="loss">
  <label for="loss">Hearing loss</label>
  <input type="checkbox" id="smell" value="smell">
  <label for="smell">Poor sense of smell</label>
</ns-inputter>
<ns-inputter validation="[]" heading="Mobility" name="mobility">
  <input type="checkbox" id="bed" value="bed">
  <label for="bed">Confined to bed</label>
  <input type="checkbox" id="mobility" value="mobility">
  <label for="mobility">Poor Mobility</label>
  <input type="checkbox" id="hand" value="hand">
  <label for="hand">Restricted hand movement</label>
  <input type="checkbox" id="door" value="door">
  <label for="door">Unable to answer the door</label>
  <input type="checkbox" id="wheel" value="wheel">
  <label for="wheel">Wheelchair user</label>
</ns-inputter>
